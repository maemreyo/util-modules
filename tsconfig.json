{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./configs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@matthew.ngo/storage": ["packages/storage/src"],
      "@matthew.ngo/ai-toolkit": ["packages/ai-toolkit/src"],
      "@matthew.ngo/content-extractor": ["packages/content-extractor/src"],
      "@matthew.ngo/analysis": ["packages/analysis/src"],
      "@matthew.ngo/*": ["packages/*/src"]
    },
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [],
  "references": [
    { "path": "./packages/storage" },
    { "path": "./packages/ai-toolkit" },
    { "path": "./packages/content-extractor" },
    { "path": "./packages/analysis" }
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}