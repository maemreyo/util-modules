{
  "name": "@matthew.ngo/util-modules",
  "version": "1.0.0",
  "description": "A collection of utility modules for modern web development",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:watch": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint --fix",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish",
    "audit": "node scripts/audit-modules.js",
    "deps:update": "pnpm -r update",
    "deps:check": "pnpm -r outdated",
    "bootstrap": "pnpm install && pnpm build",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "create:package": "node scripts/create-package.js",
    "migrate:packages": "node scripts/migrate-to-packages.js",
    "check:size": "pnpm -r size",
    "check:health": "pnpm audit && pnpm typecheck && pnpm lint",
    "docs:dev": "vitepress dev docs",
    "docs:build": "pnpm docs:api && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "docs:serve": "pnpm docs:build && pnpm docs:preview",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/coverage-v8": "^1.5.0",
    "@vitest/ui": "^1.5.0",
    "@vueuse/core": "13.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-console-log": "^1.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-unicorn": "^51.0.0",
    "nx": "^18.3.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typedoc": "0.28.5",
    "typedoc-plugin-markdown": "4.6.4",
    "typescript": "^5.4.0",
    "vitepress": "1.6.3",
    "vitest": "^1.5.0",
    "vue": "3.5.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "monorepo",
    "utilities",
    "typescript",
    "chrome-extension",
    "ai-toolkit",
    "content-extractor",
    "analysis"
  ],
  "author": "Matthew Ngo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/matthew-ngo/util-modules.git"
  },
  "bugs": {
    "url": "https://github.com/matthew-ngo/util-modules/issues"
  },
  "homepage": "https://github.com/matthew-ngo/util-modules#readme"
}
